<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/pink</item>
    </style>


    <style name="WidgetApp" parent="@android:style/Widget">
        <item name="android:textAlignment">viewStart</item>
    </style>


    <!--EditText-->
    <style name="Theme.EditText" parent="WidgetApp">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:textColorHint">@color/grey_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Theme.InputLayout" parent="WidgetApp">
        <item name="colorAccent">@color/grey_color</item>
        <item name="android:textColorHint">@color/grey_color</item>
        <item name="colorControlNormal">@color/pink</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="colorControlHighlight">@color/pink</item>
    </style>

    <style name="Button.Large.Filled" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/_0sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
